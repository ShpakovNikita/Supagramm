@model IgiLab.Models.ViewModels.LoginModel

<div class="col-md-4"></div>
<div class="col-md-4">
    <h2 class="text-center mb-3">Login page</h2>

    <div class="card">
        <div class="container mt-4 mb-3">
            <form asp-action="Login" asp-controller="Account" asp-antiforgery="true" class="form-signin">
                <div class="validation" asp-validation-summary="ModelOnly" />
                <div>
                    <div class="form-group">
                        <label asp-for="Username">Type Username</label>
                        <input type="text" class="form-control" asp-for="Username" />
                        <span asp-validation-for="Username" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Type password</label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            <div class="col text-center">
                <a asp-action="Register" asp-controller="Account" class="btn btn-light text-center">Sign up</a>
            </div>
        </div>
    </div>
</div>



